<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
  <menu id="root-menu" label="Openbox 3">
    <item label="Run Program">
      <action name="Execute">
        <command>dmenu_run</command>
      </action>
    </item>
    <separator />
    <item label="Terminal">
      <action name="Execute">
        <command>/home/joel/.cargo/bin/alacritty</command>
      </action>
    </item>
    <item label="Firefox">
      <action name="Execute">
        <command>firefox</command>
      </action>
    </item>
    <item label="Chrome">
      <action name="Execute">
        <command>google-chrome-beta</command>
      </action>
    </item>
    <item label="File Manager">
      <action name="Execute">
        <command>thunar</command>
      </action>
    </item>
    <item label="Media Player">
      <action name="Execute">
        <command>vlc</command>
      </action>
    </item>
    <separator />
    <menu id="utilities" label="Utilities">
      <item label="Transmission">
        <action name="Execute">
          <command>transmission-gtk</command>
        </action>
      </item>
      <item label="Archive">
        <action name="Execute">
          <command>xarchiver</command>
        </action>
      </item>
      <item label="Task Manager">
        <action name="Execute">
          <command>/home/joel/.cargo/bin/alacritty --command="htop"</command>
        </action>
      </item>
    </menu>
    <menu id="media" label="Media">
      <item label="GIMP">
        <action name="Execute">
          <command>gimp</command>
        </action>
      </item>
      <item label="Image Viewer">
        <action name="Execute">
          <command>gpicview</command>
        </action>
      </item>
      <item label="VLC Media Player">
        <action name="Execute">
          <command>vlc</command>
        </action>
      </item>
    </menu>
    <menu id="office" label="Office">
      <item label="Libreoffice Calc">
        <action name="Execute">
          <command>libreoffice --calc</command>
        </action>
      </item>
      <item label="Libreoffice Writer">
        <action name="Execute">
          <command>libreoffice --writer</command>
        </action>
      </item>
      <item label="Calculator">
        <action name="Execute">
          <command>galculator</command>
        </action>
      </item>
    </menu>
    <separator />
    <menu id="settings" label="Settings">
      <item label="reload config">
        <action name="Reconfigure" />
      </item>
      <item label="restart">
        <action name="Restart" />
      </item>
      <item label="configure">
        <action name="Execute">
          <command>obconf</command>
        </action>
      </item>
      <separator />
      <item label="tint2">
        <action name="Execute">
          <command>tint2conf</command>
        </action>
      </item>
      <item label="xscreensaver">
        <action name="Execute">
          <command>xscreensaver-command -pref</command>
        </action>
      </item>
      <separator />
      <item label="sound">
        <action name="Execute">
          <command>pavucontrol</command>
        </action>
      </item>
      <item label="network">
        <action name="Execute">
          <command>nm-connection-editor</command>
        </action>
      </item>
      <item label="gparted">
        <action name="Execute">
          <command>gksu gparted</command>
        </action>
      </item>
    </menu>
    <separator />
    <item label="Lock">
      <action name="Execute">
        <command>xscreensaver-command --lock</command>
      </action>
    </item>
    <item label="Log Off">
      <action name="Execute">
        <execute>openbox --exit</execute>
        <prompt>Are you sure you want to exit openbox?</prompt>
        <startupnotify>
          <enabled>yes</enabled>
        </startupnotify>
      </action>
    </item>
    <item label="Reboot">
      <action name="Execute">
        <command>systemctl reboot</command>
        <prompt>Are you sure you want to reboot?</prompt>
        <startupnotify>
          <enabled>yes</enabled>
          <name>Reboot system</name>
        </startupnotify>
      </action>
    </item>
    <item label="Power Off">
      <action name="Execute">
        <command>systemctl poweroff</command>
        <prompt>Are you sure you want to shutdown?</prompt>
        <startupnotify>
          <enabled>yes</enabled>
          <name>Power off system</name>
        </startupnotify>
      </action>
    </item>
  </menu>
</openbox_menu>
